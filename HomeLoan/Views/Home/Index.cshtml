@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Welcome to Home Loan Portal</h1>
        <p class="lead">
            A hassle-free, user-friendly platform to apply for home loans, track your application, and estimate your EMI — all without visiting a bank branch!
        </p>
        @{
            var applyUrl = User.Identity.IsAuthenticated
            ? Url.Action("Create", "Loan") // or your actual loan form path
            : Url.Page("/Account/Register", new { area = "Identity" });
        }

        <a href="@applyUrl" class="btn btn-primary btn-lg mt-3">Apply Now</a>

    </div>

    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Eligibility Calculator</h5>
                    <p class="card-text">Check how much loan you're eligible for using your monthly income.</p>
                    <a href="/Calculator/Eligibility" class="btn btn-outline-primary">Calculate Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">EMI Calculator</h5>
                    <p class="card-text">Estimate your monthly EMI based on the loan amount and tenure.</p>
                    <a href="/Calculator/EMI" class="btn btn-outline-primary">Try EMI Calculator</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Track Your Loan</h5>
                    <p class="card-text">Already applied? Track the status of your home loan application here.</p>
                    <a href="/LoanTracker" class="btn btn-outline-primary">Track Now</a>
                </div>
            </div>
        </div>
    </div>

    <hr class="my-5" />

    <div class="text-center">
        <h2>Why Choose Us?</h2>
        <p class="mt-3">
            ✔️ Online application process<br />
            ✔️ Instant eligibility check<br />
            ✔️ Real-time application tracking<br />
            ✔️ Secure document uploads<br />
            ✔️ Transparent policies & services
        </p>
        <a href="/FAQ" class="btn btn-secondary mt-3">View FAQs</a>
    </div>
</div>
